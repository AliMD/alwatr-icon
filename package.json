{
  "name": "@alwatr/monorepo",
  "description": "The Alwatr Library",
  "repository": "https://github.com/AliMD/alwatr/",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com> (https://ali.mihandoost.com)",
  "license": "MIT",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "workspaces": [
    "packages/*/*",
    "demo"
  ],
  "scripts": {
    "l": "yarn lint",
    "b": "yarn build",
    "cb": "run-s clean build",
    "s": "yarn serve:dev",
    "w": "yarn watch",
    "f": "yarn format",
    "fl": "yarn format:eslint",
    "fp": "yarn format:prettier",
    "pm": "run-s pull clean build ver-minor push",
    "pp": "run-s pull clean build ver-patch push",
    "lint": "run-s lint:*",
    "lint:ts": "eslint . --config .eslintrc.json --ext .ts --ignore-path .gitignore",
    "build": "run-s build:ts && lerna run build",
    "build:ts": "tsc --build",
    "format": "run-s format:prettier format:eslint",
    "format:eslint": "yarn lint:ts --fix",
    "format:prettier": "prettier . --ignore-path .gitignore --write",
    "clean": "yarn build:ts --clean && lerna run clean && rimraf \"{packages,demo}/**/*.{js,d.ts,map}\" \"{packages,demo}/**/.tsbuildinfo\" \"{packages,demo}/**/node_modules/\"",
    "serve:dev": "web-dev-server --config dev-server.mjs",
    "watch": "run-p watch:* serve:dev",
    "watch:ts": "yarn build:ts --watch --preserveWatchOutput",
    "ver-minor": "lerna version minor --no-push",
    "ver-patch": "lerna version patch --no-push",
    "pull": "git pull",
    "push": "git push && git push --tags",
    "publish": "lerna publish from-package"
  },
  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "~3.0.0",
    "@typescript-eslint/eslint-plugin": "~5.44.0",
    "@typescript-eslint/parser": "~5.44.0",
    "@typescript/lib-dom": "npm:@types/web",
    "@web/dev-server": "~0.1.35",
    "eslint": "~8.28.0",
    "eslint-config-google": "~0.14.0",
    "eslint-import-resolver-typescript": "~3.5.2",
    "eslint-plugin-import": "~2.26.0",
    "eslint-plugin-wc": "~1.4.0",
    "lerna": "~6.0.3",
    "npm-run-all": "~4.1.5",
    "prettier": "~2.8.0",
    "rimraf": "~3.0.2",
    "ts-lit-plugin": "~1.2.1",
    "typescript": "~4.9.3"
  }
}
