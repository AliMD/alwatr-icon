{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "rootDir": ".",
    "outDir": ".",
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ],
  },
  // files, include and exclude from the inheriting config are always overwritten.
  "include": ["**/*.ts"],
  "exclude": [],
  "references": [
    {"path": "../../core/fract"},
    {"path": "../../core/type"},
    {"path": "../../core/i18n2"},
    {"path": "../../core/signal2"},
    {"path": "../../core/util"},
  ]
}
