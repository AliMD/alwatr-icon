{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "rootDir": ".",
    "outDir": ".",
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ],
  },
  // files, include and exclude from the inheriting config are always overwritten.
  "include": ["**/*.ts"],
  "exclude": ["*.d.ts", "node_modules"],
  "references": [
    {"path": "../element"},
  ]
}
